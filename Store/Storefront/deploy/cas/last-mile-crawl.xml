<configurations xmlns="http://endeca.com/itl/cas/2011-12">
	<crawlConfig>
		<crawlId>
			<id>@@PROJECT_NAME@@-last-mile-crawl</id>
		</crawlId>
		<sourceConfig>
			<moduleId>
				<id>com.endeca.cas.source.RecordStoreMerger</id>
			</moduleId>
			<moduleProperties>
				<moduleProperty>
					<key>dataRecordStores</key>
					<value>@@PROJECT_NAME@@-data</value>
				</moduleProperty>
				<moduleProperty>
					<key>dimensionValueRecordStores</key>
					<value>@@PROJECT_NAME@@-dimvals</value>
				</moduleProperty>
				<!-- Uncomment these properties to run the crawl in SSL mode. -->
				<!--
				<moduleProperty>
					<key>host</key>
					<value>@@HOST@@</value>
				</moduleProperty>
				<moduleProperty>
					<key>port</key>
					<value>@@CAS_PORT@@</value>
				</moduleProperty>
				<moduleProperty>
					<key>isPortSsl</key>
					<value>true</value>
				</moduleProperty>
				-->
			</moduleProperties>
			<excludeFilters />
			<includeFilters />
		</sourceConfig>
		<textExtractionConfig>
			<enabled>false</enabled>
			<makeLocalCopy>false</makeLocalCopy>
		</textExtractionConfig>
		<manipulatorConfigs />
		<outputConfig>
			<moduleId>
				<id>com.endeca.cas.output.Mdex</id>
			</moduleId>
			<moduleProperties>
				<moduleProperty>
					<key>inputDirectory</key>
					<value>@@ESCAPED_PROJECT_DIR@@/config/mdex</value>
				</moduleProperty>
				<moduleProperty>
					<key>outputDirectory</key>
					<value>@@ESCAPED_PROJECT_DIR@@/data/cas_output</value>
				</moduleProperty>
                <moduleProperty>
                    <key>configSnapshotDirectory</key>
                    <value>@@ESCAPED_PROJECT_DIR@@/data/dgraphcluster/LiveDgraphCluster/config_snapshots</value>
                </moduleProperty>
				<moduleProperty>
					<key>dimensionValueIdManagerInstanceName</key>
					<value>@@PROJECT_NAME@@-dimension-value-id-manager</value>
				</moduleProperty>
				<moduleProperty>
					<key>configRepositoryHost</key>
					<value>@@HOST@@</value>
				</moduleProperty>
				<moduleProperty>
					<key>configRepositoryPort</key>
					<value>@@WORKBENCH_PORT@@</value>
				</moduleProperty>
				<!--To use clear text credentials, Uncomment the below section-->
				<!--
				<moduleProperty>
					<key>configRepositoryUserName</key>
					<value>admin</value>
				</moduleProperty>
				<moduleProperty>
					<key>configRepositoryPassword</key>
					<value>admin</value>
                </moduleProperty>
				-->
                <moduleProperty>
					<key>configRepositorySite</key>
					<value>@@PROJECT_NAME@@</value>
				</moduleProperty>
                <moduleProperty>
                    <key>JpsConfigPath</key>
                    <value>@@JPSCONFIG_LOCATION@@</value>
                </moduleProperty>
                <moduleProperty>
                    <key>OcsMapName</key>
                    <value>endecaToolsAndFrameworks</value>
                </moduleProperty>
				<moduleProperty>
                    <key>OcsKeyName</key>
                    <value>ifcr</value>
                </moduleProperty>
				<moduleProperty>
                    <key>useSsl</key>
                    <value>false</value>
                </moduleProperty>
			</moduleProperties>
		</outputConfig>
	</crawlConfig>
</configurations>
