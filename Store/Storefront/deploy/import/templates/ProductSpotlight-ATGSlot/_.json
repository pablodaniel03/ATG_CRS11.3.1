{
    "@description": "${template.description}",
    "@group": "MainContent",
    "ecr:createDate": "2016-12-07T09:49:28.838Z",
    "@thumbnailUrl": "thumbnail.jpg",
    "ecr:type": "template",
    "editorPanel": {
        "editor": "editors/DefaultEditorPanel",
        "children": [
            {
                "editor": "GroupLabel",
                "label": "${group.generalSettings.label}"
            },
            {
                "editor": "editors/StringEditor",
                "propertyName": "componentPath",
                "bottomLabel": "${property.componantPath.bottomLabel}",
                "label": "${property.componantPath.label}"
            },
            {
                "editor": "editors/NumericStepperEditor",
                "minValue": 1,
                "propertyName": "itemCount",
                "maxValue": 100,
                "label": "${property.itemCount.label}"
            },
            {
                "editor": "editors/BooleanEditor",
                "propertyName": "randomizeItems",
                "label": "${property.randomizeItems.label}",
                "enabled": true
            }
        ]
    },
    "typeInfo": {
        "componentPath": {"@propertyType": "String"},
        "randomizeItems": {"@propertyType": "Boolean"},
        "itemCount": {"@propertyType": "String"}
    },
    "defaultContentItem": {
        "@name": "ProductSpotlight-ATGSlot",
